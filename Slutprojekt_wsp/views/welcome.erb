<div class="auth-form">
  <h1>Välkommen</h1>
  <h2>Logga in</h2>

  <% if @login_error %>
    <div class="error-message"><%= @login_error %></div>
  <% end %>

  <form action="/welcome" method="POST">
    <label for="username">Användarnamn:</label>
    <input type="text" id="username" name="username" required <%= "disabled" if @cooldown_remaining && @cooldown_remaining > 0 %>>

    <label for="password">Lösenord:</label>
    <input type="password" id="password" name="password" required <%= "disabled" if @cooldown_remaining && @cooldown_remaining > 0 %>>

    <div class="auth-actions">
      <% if @cooldown_remaining && @cooldown_remaining > 0 %>
        <input type="submit" value="Vänta <%= @cooldown_remaining %> sekunder" disabled>
      <% else %>
        <input type="submit" value="Logga in">
      <% end %>
      <a href="/users/signup" class="secondary-action">Skapa konto</a>
    </div>
  </form>
</div>
